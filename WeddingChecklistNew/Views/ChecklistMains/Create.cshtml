@model WeddingChecklistNew.Models.ChecklistMain
@{
    ViewBag.Title = "Create";
}
<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h4 class="text-themecolor">List Create</h4>
        </div>
        <div class="col-md-7 align-self-center text-right">
            <div class="d-flex justify-content-end align-items-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="row">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <!-- Column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form method="post" id="ChecklistForm" enctype="multipart/form-data">
                        <div class="form-body">
                            <h5 class="card-title">Checklist</h5>
                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Name</label>
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">DueDate</label>
                                        @Html.TextBoxFor(m => m.DueDate, new { @Value = Model.DueDate.ToString("dd/MM/yyyy"), @class = "form-control datepicker" })
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Definition</label>
                                        @Html.TextAreaFor(model => model.Definition, new { @class = "form-control", @rows = "4" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Private</label>
                                        @Html.CheckBoxFor(model => model.Private, new { @class = "form-control" })
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                        </div>
                        <div class="form-actions m-t-40">
                            <button type="submit" class="btn btn-success">Save</button>
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>