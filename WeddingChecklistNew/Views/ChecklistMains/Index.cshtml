@model IEnumerable<WeddingChecklistNew.Models.ChecklistMain>

@{
    ViewBag.Title = "CheckList";
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="card">
    <div class="card-body">
        <div class="table-responsive m-t-40">
            <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>DueDate</th>
                        <th>Definition</th>
                        <th>Private</th>
                        <th>LogDate</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var item in Model)
                        {
                            <td>@item.Name</td>
                            <td>@item.DueDate.ToShortDateString()</td>
                            <td>@item.Definition</td>
                            <td>@(item.Private)</td>
                            <td>@(item.LogDate.Value != null ? item.LogDate.Value.ToShortDateString():"")</td>
                            <td class="text-nowrap">
                                <a href="javascript:void(0)" data-toggle="tooltip" data-original-title="Edit"> <i class="fa fa-pencil text-inverse m-r-10"></i> </a>
                                <a href="javascript:void(0)" data-toggle="tooltip" data-original-title="Close"> <i class="fa fa-close text-danger"></i> </a>
                            </td>
                        }
                    </tr>    
                </tbody>
            </table>
        </div>
    </div>
</div>

