@model IEnumerable<WeddingChecklistNew.Models.Checklist>

@{
    ViewBag.Title = "Index";
    string userid = Model.Select(x => x.CheckListMain.UserId).FirstOrDefault();
    bool sameuser = false;
    if (userid != null)
    {
        if (userid == User.Identity.Name) { sameuser = true; }
    }
}

<button type="button" class="btn waves-effect waves-light btn-primary" @Html.Raw(sameuser?"":"hidden='hidden'") onclick="Create()">Create New</button>
<br />
<br />


<div class="card">
    <div class="card-body">
        <div class="table-responsive m-t-40">
            <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        @*<th>url</th>*@
                        <th>Price</th>
                        <th>Currency</th>
                        <th>Priority</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.Name</td>
                            @*<td>@item.Url</td>*@
                            <td>@item.Price</td>
                            <td>@(item.Currency == null ? "" : item.Currency.code)</td>
                            <td>@(item.Priority)</td>
                            <td class="text-nowrap">
                                <a href="@Url.Action("Edit", "Checklists",new { id = item.Id })" data-toggle="tooltip" data-original-title="Edit" @Html.Raw(sameuser?"":"hidden='hidden'")  >

<i class="fa fa-pencil text-inverse m-r-5"></i>
                                </a>
                                <a href="@Url.Action("Details", "Checklists",new { id = item.Id })" data-toggle="tooltip" data-original-title="Details">
                                    <i class="fa fa-search text-inverse m-r-5"></i>
                                </a>
                                <a href="@Url.Action("Delete", "Checklists",new { id = item.Id })" data-toggle="tooltip" data-original-title="Delete" @Html.Raw(sameuser?"":"hidden='hidden'")>
                                    <i class="fa fa-close text-inverse m-r-5"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
